#!/usr/bin/env bash
# Stop Nginx service if it's running

sudo service nginx stop

# Stop Apache2 service if it's running, as it might conflict with Nginx
sudo pkill apache2

# Modify the main Nginx configuration file to run as the 'nginx' user
sudo sed -i 's/#user www-data;/user nginx;/' /etc/nginx/nginx.conf

# Change the default server configuration to listen on port 8080
sudo sed -i 's/listen 80 default_server;/listen 8080 default_server;/' /etc/nginx/sites-available/default
sudo sed -i 's/listen \[::\]:80 default_server;/listen \[::\]:8080 default_server;/' /etc/nginx/sites-available/default

# Test the Nginx configuration for syntax errors
sudo nginx -t

# Start Nginx service
sudo service nginx start

# Verify Nginx is running as 'nginx' user and listening on port 8080
ps auxff | grep ngin[x]
netstat -tuln | grep :8080

echo "Nginx has been configured to run as the 'nginx' user and is listening on port 8080."
