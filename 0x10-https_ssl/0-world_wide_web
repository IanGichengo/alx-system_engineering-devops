#!/usr/bin/env bash
# Function to display DNS information for a specific subdomain

get_dns_info() {
    local domain="$1"
    local subdomain="$2"

    # Use dig to fetch DNS information for the subdomain
    local dig_output=$(dig "$subdomain.$domain" +short)
    local record_type=$(dig "$subdomain.$domain" +short | awk 'NR==1{print $1}')

    # Output the formatted result
    echo "The subdomain $subdomain is a $record_type record and points to $dig_output"
}

# Check the number of arguments passed to the script
if [ "$#" -eq 1 ]; then
    # If only the domain is provided, fetch information for default subdomains
    get_dns_info "$1" "www"
    get_dns_info "$1" "lb-01"
    get_dns_info "$1" "web-01"
    get_dns_info "$1" "web-02"
elif [ "$#" -eq 2 ]; then
    # If both domain and subdomain are provided, fetch information for the specified subdomain
    get_dns_info "$1" "$2"
else
    # If incorrect number of arguments are provided, display usage instructions
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi
