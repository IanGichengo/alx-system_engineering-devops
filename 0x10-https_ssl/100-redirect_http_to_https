# /etc/haproxy/haproxy.cfg

frontend http-in
    bind *:80
    mode http
    option forwardfor
    option http-server-close
    option http-pretend-keepalive
    redirect scheme https code 301 if !{ ssl_fc }

frontend https-in
    bind *:443 ssl crt /etc/ssl/private/your_certificate.pem
    mode http
    option forwardfor
    option http-server-close
    option http-pretend-keepalive
    # Your other HTTPS settings

# Your other backend configurations
